<%- |
$action_name,
$type,
$facility,
$config
| -%>
# <%= $action_name %>
<% if $facility != "default" and size($config) < 3 { -%>
  <%= sprintf( '%-30s %s%s%s', $facility, 'action(type="',$type,'" ' )-%>
  <%  if $config { -%>
    <% $config.each |$k, $v| { -%>
      <% if $v =~ Array { -%>
        <%= $k -%>=<%= $v -%>
      <% } else { -%>
        <%= $k -%>="<%= $v -%>"
      <% } -%>
    <% } -%>)
  <%-}%>
<%}-%>
<% elsif $facility != "default" and size($config) > 2 { -%>
  <%= sprintf( '%-30s %s%s%s', $facility, 'action(type="',$type,'" ' )%>
  <%  if $config { -%>
    <% $config.each |$k, $v| { -%>
      <% if $v =~ Array { -%>
        <%= sprintf('%33s%-s=%s',' ',$k,$v)%>
      <% } else { -%>
        <%= sprintf('%33s%-s="%s"',' ',$k,$v)%>
      <% } -%>
    <%}-%>
  <%}-%>
<%= sprintf('%32s',')') %>
<% } else { -%>
action(type="<%= $type %>"
<% if $action_name { -%>
    name="<%= $action_name %>"
<%}-%>
<% if $config { -%>
  <% $config.each |$k, $v| { -%>
    <% if $v =~ Array {-%>
      <%= $k %>=<%= $v %>
    <% } else { -%>
      <%= $k %>="<%= $v %>"
    <% } -%>
  <%}-%>
<%}-%>
)
<%}-%>
